@model IEnumerable<Aula11.Models.Person>

<table class="table" id="Tabela">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr id="Lin_@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td id="Col_@item.Id">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"
                data-ajax="true" data-ajax-method="get"
                data-ajax-mode="replace" data-ajax-update="#Col_@item.Id">Edit</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id"
                data-ajax="true" data-ajax-method="get"
                data-ajax-mode="replace" data-ajax-update="#Lin_@item.Id"
                data-ajax-confirm="Are you sure?">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
